/* Navbar Styles */
.navbar {
    background-color: #d6d8db; /* Solid gray background */
    padding: 15px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
}

/* Navbar Title */
.navbar-brand {
    color: #343a40; /* Dark gray for contrast */
    font-size: 28px;
    font-weight: bold;
    margin: 0;
}

/* Button Styles */
.btn-primary {
    background-color: #28a745; /* Solid green color */
    border: none;
    color: white;
    padding: 10px 20px;
    border-radius: 20px;
    font-weight: bold;
    transition: all 0.3s ease-in-out;
    display: flex;
    align-items: center;
}

/* Button Hover Effect */
.btn-primary:hover {
    background-color: #218838; /* Darker green on hover */
    transform: scale(1.05); /* Slight zoom effect */
}

/* Button Icon */
.btn-primary .oi {
    margin-right: 5px;
    font-size: 16px;
}

